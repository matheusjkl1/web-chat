<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>WebChat</title>
  <link rel="stylesheet" href="./chat.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
</head>
<body>
  <div class="container-lg main-div">
    <div class="form-div mb-3">
      <header class="header">
        <h1>WebChat</h1>
      </header>
      <form id="form-nickname">
        <input
          type="text"
          placeholder="Change your Nickname"
          id="nickname-input"
          data-testid="nickname-box"
        >
        <button
          type="button"
          id="form-nickname-button"
          data-testid="nickname-button"
          class="btn btn-secondary"
        >
          Salvar
        </button>
      </form>
    </div>
    <div class="chat">
      <h3>Usuarios Online</h3>
      <ul id="users-online"></ul>
      <ul id="messages"></ul>
    </div>
      <div class="form-div-msg mb-3">
        <form id="form-message" >
          <div>
            <input
              type="text"
              placeholder="Digite sua mensagem" 
              class="form-message-input"
              id="message" 
              autocomplete="off"
              data-testid="message-box"
            >
          </div>
          <div>
            <button 
              type="button"
              id="form-message-button"
              data-testid="send-button"
              class="btn btn-secondary"
            >
              Send
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script src="/socket.io/socket.io.js"></script>
  <script src="./chat.js"></script>
</body>
</html>